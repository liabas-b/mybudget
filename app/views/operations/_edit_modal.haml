    .modal-content
      = form_for(@operation, remote: true) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title= "OPERATION: #{f.object.name}"
